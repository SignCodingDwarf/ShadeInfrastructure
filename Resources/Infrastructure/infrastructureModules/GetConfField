### Version STR
VERSION_STR="0.1"

### Initialization
# Colors
usageColor='\033[1;34m' #Help on command is printed in light blue
descriptionColor='\033[1;31m' #Command description is printed in light red
errorColor='\033[1;31m' #Error message is printed in light red
NC='\033[0m' # No Color

# Functions
##!
# @brief Display Usage Information
##
Usage()
{
    echo -e "Usage \n"
    echo -e "${usageColor} ./GetConfField <file> <field>${NC}\n"
    echo -e "${descriptionColor}Get the current value of a given configuration field${NC}\n"
}

### Check arguments
# Check valid number of arguments 
if [[ $# -ne 2 ]]; then
    Usage
    exit 1
fi 

FILE=$1
FIELD=$2

# Check validity of file
if [ ! -s ${FILE} ]; then
    echo -e "${errorColor}File ${FILE} is empty or does not exist${NC}"
    exit 2
fi

### Extract value associated with field
grep "${FIELD}=" ${FILE} | sed -r "s/${FIELD}=//g"

exit 0

